@model IEnumerable<Garage2._0.Models.Member>

@{
    ViewBag.Title = "Members Page";
}

<h2>Members Page</h2>

<p>
    @Html.ActionLink("Create New Member", "Create")
</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
      
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.TextBox("searchString")
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
}
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit Member", "Edit", new { id = item.Id }) |
                    @* @Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                    @Html.ActionLink("Delete Member", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
